<% layout("/layouts/boilerplate") %>
<!-- Layout file reference -->

<!-- The main item (Card Code)--- Start -->
<div class="row mt-3">
  <div class="col-12 col-md-10 offset-md-1">
    <!-- Display the listing title -->
    <h3 class="text-center"><b><%= listing.title %></b></h3>
  </div>

  <div class="card col-12 col-md-10 offset-md-1 show-card listing-card">
    <!-- Adjust image for responsiveness and center it -->
    <img
      src="<%= listing.image.url %>"
      class="card-img-top show-img img-fluid"
      alt="Listing-Image"
      style="max-height: 500px; object-fit: cover; width: 100%"
    />
    <div class="card-body">
      <!-- Display the listing description, price, location, and country -->
      <p class="card-text"><%= listing.user.username %></p>
      <p class="card-text"><%= listing.description %></p>
      <p class="card-text">
        &#8377; <%= listing.price.toLocaleString("en-IN") %>
      </p>
      <p class="card-text"><%= listing.location %></p>
      <p class="card-text"><%= listing.country %></p>
    </div>
  </div>
  <br />
</div>
<!-- The main item (Card Code)--- End -->

<!-- Edit & Delete Button Section--- Start -->
<div class="btns offset-md-2">
  <!-- Edit Button: Sends GET request to edit the listing -->
  <form action="/listings/<%=listing._id%>/edit" method="get">
    <button class="btn btn-dark">Edit</button>
  </form>

  <!-- Delete Button: Sends DELETE request to delete the listing -->
  <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
    <button class="btn btn-dark mb-3">Delete</button>
  </form>
</div>
<hr />
<!-- Edit & Delete Button Section--- End -->

<!-- Review Section--- Start -->
<div class="col-12 col-md-8 offset-md-2 mb-3">
  <h4>Leave A Review</h4>
  <!-- Review form with a POST request to submit a new review -->
  <form
    action="/listings/<%= listing._id %>/reviews"
    method="post"
    novalidate
    class="needs-validation"
  >
    <!-- Rating Input: A range input for selecting rating from 1 to 5 -->
    <div class="mb-3 mt-3">
      <label for="rating" class="form-label">Rating</label>
      <input
        type="range"
        min="1"
        max="5"
        id="rating"
        name="review[rating]"
        class="form-range"
      />
    </div>

    <!-- comments Input: Text area for adding comments -->
    <div class="mb-3 mt-3">
      <label for="comment" class="form-label">comments</label>
      <textarea
        name="review[comment]"
        id="Comment"
        cols="30"
        rows="5"
        class="form-control"
        required
      ></textarea>
      <!-- Feedback for validation if the comments field is empty -->
      <div class="invalid-feedback">please put some comments</div>
      <br />
      <!-- Submit button for submitting the review form -->
      <button class="btn btn-outline-dark">Submit</button>
    </div>
  </form>
</div>
<!-- Review Section--- End -->

<!-- Showing Review -->

<% if (listing.reviews.length) { %> <% listing.reviews.forEach(review => { %>
<p><b>All Reviews</b></p>
<div class="row">
  <div class="card col-5 mb-3 ms-3">
    <div class="card-body">
      <h5 class="card-title">Pawas</h5>
      <p class="card-text"><%= review.comment %></p>
      <p class="card-text"><%= review.rating %> Stars</p>
    </div>
    <!-- delete Review-->
    <form
      class="mb-3"
      method="post"
      action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
    >
      <button class="btn btn-sm btn-dark">Delete</button>
    </form>
  </div>
</div>
<% }); %> <% } else { %>
<p>No reviews available.</p>
<% } %>
