<% layout("/layouts/boilerplate") %>
<!-- Layoutcode----End---from/Layouts/boilerplate -->

<!-- The main item (Card Code)--- Start -->
<div class="row mt-3">
  <div class="col-10 offset-1">
    <h3><b><%= listing.title %></b></h3>
  </div>
  <div class="card col-10 offset-1 show-card">
    <img
      src="<%= listing.image.url %>"
      class="card-img-top show-img"
      alt="Listing-Image"
    />
    <div class="card-body">
      <p class="card-text">
        <br />
        <%= listing.description %> <br />
        &#8377; <%= listing.price.toLocaleString("en-IN") %> <br />
        <%= listing.location %> <br />
        <%= listing.country %>
      </p>
    </div>
  </div>
  <br />
</div>
<!-- The main item (Card Code)--- Start -->

<!--// Edit---&---Delete---Button---SectionStart -->
<div class="btns offset-2">
  <form action="/listings/<%=listing._id%>/edit" method="get">
    <button class="btn btn-dark">Edit</button>
  </form>
  <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
    <button class="btn btn-dark mb-3">Delete</button>
  </form>
</div>
<hr />
<!--// Edit---&---Delete---Button---SectionEnd -->

