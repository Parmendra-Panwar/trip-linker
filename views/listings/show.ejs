<% layout("/layouts/boilerplate") %>
<!-- Layout file reference -->

<!-- The main item (Card Code)--- Start -->
<div class="row mt-3">
  <div class="col-12 col-md-10 offset-md-1">
    <!-- Display the listing title -->
    <h3 class="text-center"><b> <%= listing.title %> </b></h3>
  </div>

  <div class="card col-12 col-md-10 offset-md-1 show-card listing-card">
    <!-- Adjust image for responsiveness and center it -->
    <img
      src="<%= listing.image.url %>"
      class="card-img-top show-img img-fluid"
      alt="Listing-Image"
      style="max-height: 500px; object-fit: cover; width: 100%"
    />
    <div class="card-body">
      <!-- Display the listing description, price, location, and country -->
      <p class="card-text"><%= listing.user.username %></p>
      <p class="card-text"><%= listing.description %></p>
      <p class="card-text">
        &#8377; <%= listing.price.toLocaleString("en-IN") %>
      </p>
      <p class="card-text"><%= listing.location %></p>
      <p class="card-text"><%= listing.country %></p>
    </div>
  </div>
  <br />
</div>
<!-- The main item (Card Code)--- End -->

<!-- Edit & Delete Button Section--- Start -->
<% if(currUser && currUser._id.equals(listing.user._id)){%>
<div class="btns offset-md-2">
  <!-- Edit Button: Sends GET request to edit the listing -->
  <form action="/listings/<%=listing._id%>/edit" method="get">
    <button class="btn btn-dark btn-edit mt-3">Edit</button>
  </form>

  <!-- Delete Button: Sends DELETE request to delete the listing -->
  <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
    <button class="btn btn-dark mb-3">Delete</button>
  </form>
</div>
<% } %>

<hr />
<!-- Edit & Delete Button Section--- End -->

<!-- Create eview Section--- Start -->
<div class="col-12 col-md-8 offset-md-2 mb-3">
  <h4>Leave A Review</h4>
  <!-- Review form with a POST request to submit a new review -->
  <form
    action="/listings/<%= listing._id %>/reviews"
    method="post"
    novalidate
    class="needs-validation"
  >
    <!-- Rating Input: A range input for selecting rating from 1 to 5 -->
    <div class="mb-3 mt-3">
      <label for="rating" class="form-label">Rating</label>
      <fieldset class="starability-coinFlip">
        <input
          type="radio"
          id="no-rate"
          class="input-no-rate"
          name="review[rating]"
          value="1"
          checked
          aria-label="No rating."
        />
        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
        <label for="first-rate1" title="Terrible">1 star</label>
        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
        <label for="first-rate2" title="Not good">2 stars</label>
        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
        <label for="first-rate3" title="Average">3 stars</label>
        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
        <label for="first-rate4" title="Very good">4 stars</label>
        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
        <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>
    </div>
    <!-- comments Input: Text area for adding comments -->
    <div class="mb-3 mt-3">
      <label for="comment" class="form-label">comments</label>
      <textarea
        name="review[comment]"
        id="Comment"
        cols="30"
        rows="5"
        class="form-control"
        required
      ></textarea>
      <!-- Feedback for validation if the comments field is empty -->
      <div class="invalid-feedback">please put some comments</div>
      <br />
      <!-- Submit button for submitting the review form -->
      <button class="btn btn-outline-dark">Submit</button>
    </div>
  </form>
</div>
<!-- Create Review Section--- End -->

<!-- Showing Review -->

<% if (listing.reviews.length) { %> <% listing.reviews.forEach(review=> { %>
<p><b>All Reviews</b></p>
<div class="row">
  <div class="card col-5 mb-3 ms-3">
    <div class="card-body">
      <h5 class="card-title">@<%= review.author.username %></h5>
      <p
        class="starability-result card-text"
        data-rating="<%= review.rating %>"
      ></p>
      <p class="card-text"><%= review.comment %></p>
    </div>
    <!-- delete Review-->
    <% if(currUser && currUser._id.equals(review.author._id)){%>
    <form
      class="mb-3"
      method="post"
      action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
    >
      <button class="btn btn-sm btn-dark">Delete</button>
    </form>
    <% } %>
  </div>
</div>
<% }); %> <% } else { %>
<p>No reviews available.</p>
<% } %>
