<%if(success && success.length){ %>
<div
  class="alert alert-success alert-dismissible fade show col-6 offset-3"
  role="alert"
  style="background: rgb(179, 240, 57)"
>
  <%= success %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-level="Close"
  ></button>
</div>
<% } %>
<!-- . -->
<%if(error && error.length){ %>
<div
  class="alert alert-danger alert-dismissible fade show col-6 offset-3"
  role="alert"
  style="background: rgb(250, 56, 49)"
>
  <%= error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-level="Close"
  ></button>
</div>
<% } %>
